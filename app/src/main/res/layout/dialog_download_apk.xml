<?xml version="1.0" encoding="utf-8"?>

<!-- by choy -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- 提示 -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/version_update_tips_loading"
        android:textColor="#43cfac"
        android:textSize="14sp" />

    <!-- 下载进度百分比 -->

    <TextView
        android:id="@+id/tvProgress"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal|bottom"
        android:text="@string/version_update_tips_progress"
        android:textColor="#43cfac"
        android:textSize="14sp" />

    <!-- 下载进度条 -->

    <ProgressBar
        android:id="@+id/progressBarDownload"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/background_dowanload_progressbar" />

    <!-- 分割线 -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="30dp"
        android:background="@color/background_divider_gray" />

    <!-- 取消 -->

    <TextView
        android:id="@+id/tvCancelDownload"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/version_update_cancel"
        android:textColor="#43cfac"
        android:textSize="14sp" />

</LinearLayout>